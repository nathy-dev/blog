---
import { ViewTransitions } from "astro:transitions";
import "../styles/globals.css";
import "@fontsource-variable/red-hat-text";
import "@fontsource/vt323";

import Meta from "@/components/Meta.astro";

import { Nav } from "@/components/Nav";
import config from "@/config";

const {
  meta: { title, description = config.description },
} = Astro.props;
---

<script>
  import config from "@/config";
  function displayMode() {
    const preference = window.matchMedia("(prefers-color-scheme: dark)").matches
      ? "dark"
      : "light";

    const derivedMode =
      localStorage.mode === "light" || localStorage.mode === "dark"
        ? localStorage.mode
        : preference;

    if (derivedMode === "dark") {
      document.documentElement.classList.add("dark");
      document.documentElement.setAttribute(
        "data-theme",
        config.modes.dark as string
      );
    } else {
      document.documentElement.classList.remove("dark");
      document.documentElement.setAttribute(
        "data-theme",
        config.modes.light as string
      );
    }

    const theme = localStorage.theme ?? config.theme;
    if (theme) document.documentElement.classList.add(theme);
  }

  displayMode();
  document.addEventListener("astro:after-swap", displayMode);
</script>
<html lang="en">
  <head>
    <Meta title={title} description={description} />
    <ViewTransitions />
  </head>
  <body class="bg-main dark:bg-darkMain font-base h-dvh">
    <div
      class="flex flex-col-reverse sm:gap-10 gap-2 h-full w-full sm:p-10 p-4 sm:flex-row"
    >
      <Nav client:only="react" pathName={Astro.url.pathname} />
      <main
        class="bg-bg border-border border-4 p-10 w-full max-w-[1200px] h-full max-h-screen overflow-y-auto scrollbar scrollbar-thumb-main dark:bg-darkBg dark:scrollbar-thumb-darkMain dark:scrollbar-track-white scrollbar-track-border"
      >
        <slot />
      </main>
    </div>
  </body>
</html>
