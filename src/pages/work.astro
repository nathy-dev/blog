---
import { Experience } from "@/components/Experience";
import { Education } from "@/components/Education";
import { Skills } from "@/components/Skills";

import BaseLayer from "@/layouts/BaseLayer.astro";
---

<BaseLayer meta={{ title: "Work Experience" }}>
  <h1 class="mb-8 text-2xl font-heading sm:text-4xl">
    Fullstack Software Engineer
  </h1>

  <div class="mb-10 text-base sm:text-lg flex flex-col gap-2">
    <p>
      I build highly interactive, performant, and accessible applications. I'm a
      perpetually curious person familiar with modern web development and
      passionate about delighting the end user.
    </p>
  </div>
  <Experience />
  <Skills client:load />
  <Education />
</BaseLayer>
