---
import config from "@/config";

import "@/styles/globals.css";
import BaseLayer from "../layouts/BaseLayer.astro";
import { Link } from "@/components/ui/link";
---

<BaseLayer meta={{ title: config.title }}>
  <div class="flex flex-col h-full w-full">
    <h1 class="text-3xl font-pixel sm:text-5xl font-heading">
      Nathaniel MacKinlay
    </h1>
    <div class="mt-8 text-base sm:text-lg">
      <p>Hi, you can call me Nathy.</p>

      <p>
        I'm a professional software engineer and an <Link
          href="/reclaiming-amateur">amateur</Link
        > game developer.
      </p>
    </div>
  </div>
</BaseLayer>
